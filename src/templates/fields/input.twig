{# Ottawa Weather Field Input Template #}
{# This template is shown in the Control Panel when editing an entry #}

<style>
    .ottawa-weather-field {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: #f9fafb;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        padding: 15px;
    }

    .weather-current {
        background: linear-gradient(135deg, #5568d3 0%, #6a3f8f 100%);
        color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .weather-current-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .weather-current-temp {
        font-size: 48px;
        font-weight: bold;
        line-height: 1;
    }

    .weather-current-icon img {
        width: 60px;
        height: 60px;
    }

    .weather-current-condition {
        font-size: 18px;
        margin-bottom: 10px;
        opacity: 0.9;
    }

    .weather-current-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        font-size: 14px;
        opacity: 0.9;
    }

    .weather-forecast {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    .weather-periods-title {
        font-size: 16px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 15px;
    }

    .forecast-day {
        background: #ffffff;
        border: 2px solid #cbd5e0;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
    }

    .forecast-day:hover,
    .forecast-day:focus-within {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.15);
        border-color: #5568d3;
    }

    .forecast-day:focus {
        outline: 3px solid #5568d3;
        outline-offset: 2px;
    }

    .forecast-day-name {
        font-weight: bold;
        color: #1a202c;
        margin-bottom: 5px;
        font-size: 16px;
    }

    .forecast-time-range {
        font-size: 12px;
        color: #4a5568;
        margin-bottom: 10px;
    }

    .forecast-icon img {
        width: 50px;
        height: 50px;
        margin: 10px 0;
    }

    .forecast-temp {
        font-size: 28px;
        font-weight: bold;
        color: #2d3748;
        margin: 10px 0;
    }

    .forecast-temp-range {
        font-size: 13px;
        color: #4a5568;
        margin-bottom: 8px;
    }

    .forecast-condition {
        font-size: 14px;
        color: #2d3748;
        line-height: 1.4;
        margin-bottom: 10px;
    }

    .forecast-details {
        font-size: 13px;
        color: #4a5568;
        border-top: 1px solid #cbd5e0;
        padding-top: 10px;
        margin-top: 10px;
    }

    .forecast-detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }

    .weather-error {
        padding: 20px;
        text-align: center;
        color: #e53e3e;
        background: #fff5f5;
        border: 1px solid #feb2b2;
        border-radius: 8px;
    }

    .weather-attribution {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #e2e8f0;
        font-size: 11px;
        color: #a0aec0;
        text-align: center;
    }

    .weather-attribution a {
        color: #5568d3;
        text-decoration: underline;
    }

    .weather-attribution a:hover,
    .weather-attribution a:focus {
        color: #3d4db8;
        text-decoration: underline;
    }

    .weather-attribution a:focus {
        outline: 2px solid #5568d3;
        outline-offset: 2px;
        border-radius: 2px;
    }

    .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }
</style>

<div class="ottawa-weather-field" lang="{{ language }}" role="region" aria-label="{{ 'Ottawa Weather'|t('meteocraft') }}">
    {% if weatherData and weatherData.current %}
        {# Current Conditions #}
        <section class="weather-current" aria-labelledby="current-conditions-heading">
            <h2 id="current-conditions-heading" class="visually-hidden">{{ 'Current Conditions'|t('meteocraft') }}</h2>
            <div class="weather-current-header">
                <div>
                    <div class="weather-current-temp" aria-label="{{ 'Temperature'|t('meteocraft') }}: {{ weatherData.current.temperature }} {{ 'degrees Celsius'|t('meteocraft') }}">
                        {{ weatherData.current.temperature }}째C
                    </div>
                    <div class="weather-current-condition">
                        {{ weatherData.current.condition }}
                    </div>
                </div>
                {% if weatherData.current.iconUrl %}
                    <div class="weather-current-icon" aria-hidden="true">
                        <img src="{{ weatherData.current.iconUrl }}"
                             alt=""
                             role="presentation"
                             loading="lazy">
                    </div>
                {% endif %}
            </div>

            <dl class="weather-current-details">
                <div>
                    <dt><strong>{{ 'Feels Like'|t('meteocraft') }}:</strong></dt>
                    <dd>{{ weatherData.current.feelsLike }}째C</dd>
                </div>
                <div>
                    <dt><strong>{{ 'Humidity'|t('meteocraft') }}:</strong></dt>
                    <dd>{{ weatherData.current.humidity }}%</dd>
                </div>
                <div>
                    <dt><strong>{{ 'Wind'|t('meteocraft') }}:</strong></dt>
                    <dd>{{ weatherData.current.windDirection }} {{ weatherData.current.windSpeed }} km/h</dd>
                </div>
                <div>
                    <dt><strong>{{ 'Pressure'|t('meteocraft') }}:</strong></dt>
                    <dd>
                        {{ weatherData.current.pressure }} kPa
                        {% if weatherData.current.pressureTrend %}
                            ({{ weatherData.current.pressureTrend|t('meteocraft') }})
                        {% endif %}
                    </dd>
                </div>
            </dl>
        </section>

        {# Today's Forecast by Time Period #}
        {% if weatherData.periods|length > 0 %}
            <section aria-labelledby="forecast-heading">
                <h2 id="forecast-heading" class="weather-periods-title">{{ 'Today\'s Forecast'|t('meteocraft') }}</h2>
                <div class="weather-forecast">
                    {% for period in weatherData.periods %}
                        <article class="forecast-day" tabindex="0" role="article" aria-labelledby="period-{{ loop.index }}-heading">
                            <h3 id="period-{{ loop.index }}-heading" class="forecast-day-name">
                                {{ period.name }}
                            </h3>
                            <div class="forecast-time-range" aria-label="{{ 'Time range'|t('meteocraft') }}">
                                <time>{{ period.range }}</time>
                            </div>

                            {% if period.iconUrl %}
                                <div class="forecast-icon" aria-hidden="true">
                                    <img src="{{ period.iconUrl }}"
                                         alt=""
                                         role="presentation"
                                         loading="lazy">
                                </div>
                            {% endif %}

                            <div class="forecast-temp" aria-label="{{ 'Temperature'|t('meteocraft') }}: {{ period.temperature }} {{ 'degrees Celsius'|t('meteocraft') }}">
                                {{ period.temperature }}째C
                            </div>
                            <div class="forecast-temp-range" aria-label="{{ 'Temperature range'|t('meteocraft') }}">
                                {{ period.tempRange }}
                            </div>

                            <div class="forecast-condition">
                                {{ period.condition }}
                            </div>

                            <dl class="forecast-details">
                                <div class="forecast-detail-row">
                                    <dt>{{ 'Feels Like'|t('meteocraft') }}:</dt>
                                    <dd>{{ period.feelsLike }}째C</dd>
                                </div>
                                <div class="forecast-detail-row">
                                    <dt>{{ 'Wind'|t('meteocraft') }}:</dt>
                                    <dd>{{ period.windDirection }} {{ period.windSpeed }} km/h</dd>
                                </div>
                                {% if period.precipitation > 0 %}
                                    <div class="forecast-detail-row">
                                        <dt>{{ 'Precipitation'|t('meteocraft') }}:</dt>
                                        <dd>{{ period.precipitation }}%</dd>
                                    </div>
                                {% endif %}
                            </dl>
                        </article>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        <footer class="weather-attribution">
            {{ 'Weather data from'|t('meteocraft') }} <a href="https://weather.gc.ca/" target="_blank" rel="noopener noreferrer" aria-label="{{ 'Environment and Climate Change Canada'|t('meteocraft') }} ({{ 'opens in new window'|t('meteocraft') }})">{{ 'Environment and Climate Change Canada'|t('meteocraft') }}</a>
        </footer>

    {% else %}
        <div class="weather-error" role="alert" aria-live="polite">
            <p><strong>{{ 'Unable to load weather data'|t('meteocraft') }}</strong></p>
            <p>{{ 'Please check your internet connection and try refreshing the page.'|t('meteocraft') }}</p>
        </div>
    {% endif %}
</div>
