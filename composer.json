{
  "name": "csabourin/meteocraft",
  "description": "Simple CraftCMS plugin for displaying Ottawa weather from Environment Canada with a front-end Twig template",
  "type": "craft-plugin",
  "keywords": ["craftcms", "weather", "ottawa", "eccc", "twig", "bilingual", "accessibility", "wcag"],
  "license": "MIT",
  "authors": [
    {
      "name": "csabourin"
    }
  ],
  "require": {
    "php": ">=8.0",
    "craftcms/cms": "^5.0.0",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "csabourin\\meteocraft\\": "src/"
    }
  },
  "extra": {
    "name": "MeteoCraft",
    "handle": "meteocraft",
    "class": "csabourin\\meteocraft\\MeteoCraft",
    "developer": "csabourin",
    "developerUrl": "https://github.com/csabourin/meteoCraft",
    "documentationUrl": "https://github.com/csabourin/meteoCraft/blob/main/README.md"
  }
}
